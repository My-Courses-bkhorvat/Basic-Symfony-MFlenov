{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>All categories</h1>

    <form method="get">
        <input type="text" name="searchfor" value="{{ searchfor }}">
        <button>Search</button>
    </form>

    <ul>
        {% for category in categories %}
            <li><a href="/db/editcategory/{{ category.getCategoryid() }}">{{ category.getCategoryname() }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
